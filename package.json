{
  "name": "lp-react-components",
  "version": "0.2.20",
  "description": "(Reusable React components)",
  "author": "pkibbey",
  "license": "MIT",
  "repository": "pkibbey/lp-react-components",
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "source": "src/index.js",
  "engines": {
    "node": ">=10"
  },
  "browserslist": {
    "production": [
      "last 2 versions",
      "ie 11",
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "ie 11",
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "scripts": {
    "build": "microbundle-crl --no-compress --format modern,cjs",
    "start": "microbundle-crl watch --no-compress --format modern,cjs",
    "prepare": "run-s build",
    "test": "run-s test:unit test:lint test:build",
    "test:build": "run-s build",
    "test:lint": "eslint src/components/**/*.js",
    "test:unit": "cross-env CI=1 react-scripts test --env=jsdom",
    "test:watch": "react-scripts test --env=jsdom",
    "coverage": "react-scripts test --watchAll=false --coverage --env=jsdom && rm -rf docs/coverage && mv coverage docs/coverage",
    "predeploy": "build-storybook && npm run build-styleguide && npm run coverage",
    "deploy": "gh-pages -d docs",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook -o docs/storybook",
    "styleguide": "npx styleguidist server",
    "build-styleguide": "npx styleguidist build"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/index.js",
      "<rootDir>/src/assets/theme.js"
    ]
  },
  "peerDependencies": {
    "react": "^16.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.11.0",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-react": "^7.10.4",
    "@rebass/forms": "^4.0.6",
    "@storybook/addon-actions": "^5.3.19",
    "@storybook/addon-info": "^5.3.19",
    "@storybook/addon-links": "^5.3.19",
    "@storybook/addons": "^5.3.19",
    "@storybook/preset-create-react-app": "^3.1.4",
    "@storybook/react": "^5.3.19",
    "@storybook/theming": "^5.3.19",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.1.0",
    "cross-env": "^7.0.2",
    "emotion-theming": "^10.0.27",
    "eslint-config-prettier": "^6.7.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-standard": "^4.0.1",
    "gh-pages": "^3.1.0",
    "microbundle-crl": "^0.13.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.4",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "^3.4.1",
    "react-styleguidist": "^11.0.8",
    "rebass": "^4.0.6",
    "storybook-addon-jsx": "^7.3.3",
    "themeprovider-storybook": "^1.5.1"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@rebass/forms": "^4.0.6",
    "@storybook/addon-a11y": "^5.3.19",
    "@storybook/addon-backgrounds": "^5.3.19",
    "@storybook/addon-knobs": "^5.3.19",
    "@storybook/addon-storysource": "^5.3.19",
    "@storybook/addon-viewport": "^5.3.19",
    "@testing-library/react": "^10.4.7",
    "emotion-theming": "^10.0.27",
    "react-app-polyfill": "^1.0.6",
    "react-spinner-material": "^1.3.1",
    "rebass": "^4.0.6",
    "styled-components": "^5.1.1"
  },
  "bugs": {
    "url": "https://github.com/pkibbey/lp-react-components/issues"
  },
  "homepage": "https://github.com/pkibbey/lp-react-components#readme"
}
