{
  "name": "lp-react-components",
  "version": "1.3.25",
  "description": "LivePerson React components",
  "author": "pkibbey",
  "license": "MIT",
  "repository": "pkibbey/lp-react-components",
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "source": "src/index.js",
  "engines": {
    "node": ">=10"
  },
  "browserslist": {
    "production": [
      "last 2 versions",
      "ie 11",
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "ie 11",
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "scripts": {
    "build": "microbundle-crl --no-compress --format modern,cjs",
    "start": "microbundle-crl watch --no-compress --format modern,cjs",
    "prepare": "run-s build",
    "lint": "eslint src/components/**/*.js",
    "lint-fix": "eslint src/components/**/*.js --fix",
    "test": "react-scripts test --watchAll=false",
    "test:watch": "react-scripts test --watchAll=true --env=jsdom",
    "test:update": "react-scripts test --watchAll=false -u --env=jsdom",
    "test:coverage": "react-scripts test --coverage --watchAll=false --env=jsdom && rm -rf docs/coverage && mv coverage docs/coverage",
    "predeploy": "build-storybook && npm run test:coverage",
    "deploy": "gh-pages -d docs",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook -o docs/storybook",
    "analyze": "npm run build && source-map-explorer 'dist/*.js'"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/index.js",
      "<rootDir>/src/theme.js",
      "<rootDir>/src/stories/0-Button.stories.js",
      "<rootDir>/src/stories/1-InputField.stories.js",
      "<rootDir>/src/stories/2-SelectField.stories.js",
      "<rootDir>/src/stories/3-LoadingDots.stories.js",
      "<rootDir>/src/stories/4-Loader.stories.js",
      "<rootDir>/src/stories/5-Modal.stories.js",
      "<rootDir>/src/stories/6-Checkbox.stories.js"
    ]
  },
  "peerDependencies": {
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "theme-ui": "^0.7.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.13.15",
    "@babel/preset-react": "^7.13.13",
    "@storybook/addon-a11y": "^6.2.8",
    "@storybook/addon-essentials": "^6.2.8",
    "@storybook/preset-create-react-app": "^3.1.7",
    "@storybook/react": "^6.2.8",
    "@storybook/theming": "^6.2.8",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.6",
    "babel-eslint": "^10.0.3",
    "cross-env": "^7.0.3",
    "eslint-config-prettier": "^6.13.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-config-standard-react": "^11.0.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-react": "^7.23.2",
    "gh-pages": "^3.1.0",
    "microbundle-crl": "^0.13.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "prop-types": "^15.7.2",
    "react": "^16.14.0",
    "react-app-polyfill": "^2.0.0",
    "react-dom": "^16.14.0",
    "react-scripts": "^4.0.2",
    "react-select": "^4.3.0",
    "react-spinner-material": "^1.3.1",
    "sb": "^6.2.8",
    "source-map-explorer": "^2.5.2",
    "storybook-addon-jsx": "^7.3.7",
    "theme-ui": "^0.7.0"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "directories": {
    "doc": "docs"
  },
  "dependencies": {
    "@theme-ui/css": "^0.7.0"
  }
}
